<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:duplicateParentState="true"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="@dimen/title_w"
        android:layout_height="@dimen/title_h"
        android:duplicateParentState="true">
        <!-- 标题栏文本 -->
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:duplicateParentState="true"
            android:gravity="center"
            android:text="电视剧"
            android:textColor="@drawable/title_text_state_selector"
            android:textSize="40px" />
        <!-- 下划线 -->
        <View
            android:id="@+id/title_line_view"
            android:layout_width="@dimen/title_line_w"
            android:layout_height="@dimen/title_line_h"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/title_bg_statue_selector"
            android:duplicateParentState="true" />
    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoFrameLayout>