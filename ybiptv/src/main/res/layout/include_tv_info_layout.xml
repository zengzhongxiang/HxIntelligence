<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textMovieName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:text="--"
        android:textColor="#fff"
        android:textSize="30sp" />

    <View
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/commom_all_white_fifhty" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="导演:   --"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/textDirector"
            android:gravity="center"
            android:text="演员:   "
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textActor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/title"
            android:gravity="center"
            android:text="--"
            android:textColor="#fff"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/textContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textDirector"
            android:layout_marginLeft="30dp"
            android:text="--"
            android:textColor="@color/commom_all_white_fifhty"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>